<% layout('layouts/boilerplate') %>
<div id="cluster-map" class="mb-3"></div>
<h1>All Campgrounds</h1>
<% for(let campground of campgrounds) { %>
<div class="card mb-3">
    <div class="row">
        <div class="col-md-4">
            <% if(campground.images.length) {%>
            <img src="<%= campground.images[0].url %> " alt="" class="img-fluid">
            <% } else {%>
            <img src="https://res.cloudinary.com/makaelas/image/upload/v1653493524/YelpCamp/ondl8cpdzjhmxy70mxdh.jpg"
                alt="">
            <% } %>
        </div>
        <div class="col-md-8">
            <div class="card-body">
                <h5 class="card-title">
                    <%= campground.title %>
                </h5>
                <p class="card-text">
                    <%= campground.description %>
                </p>
                <p class="card-text text-muted">
                    <%= campground.location %> - $<%= campground.price %>/night
                </p>
                <a href="/campgrounds/<%= campground._id%>" class="btn btn-primary">View <%= campground.title %>
                </a>
            </div>
        </div>
    </div>
</div>
<% } %>
<script>
    const mapToken = '<%- process.env.MAPBOX_TOKEN%>';
    const campgrounds = { features: <%- JSON.stringify(campgrounds) %>};   
</script>
<script src="/js/clusterMap.js"></script>